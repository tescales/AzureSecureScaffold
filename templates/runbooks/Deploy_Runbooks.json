{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "accountname": {
            "type": "string",
            "metadata": {
                "description": "The name of the Azure Automation account to deploy to."
            }
        },
        "runbooks": {
            "type": "array",
            "defaultvalue": []
        },
        "runnowbooks": {
            "type": "array",
            "defaultvalue": []
        }
    },
    "variables": {
        "jobLink": "https://raw.githubusercontent.com/tescales/azure-scaffold/master/templates/automation/jobs/azuredeploy.json",
        "scheduleTemplate": "https://raw.githubusercontent.com/azureautomation/automation-packs/master/000-base-automation-resource-templates/deploy-schedule/deployRunbookOnSchedule.json",
        "runbookTemplate": "https://raw.githubusercontent.com/tescales/azure-scaffold/master/templates/automation/runbooks/azuredeploy.json"
    },
    "resources": [
        {
            "name": "[concat(parameters('accountName'), '/', parameters('runbooks')[copyIndex()].name)]",
            "type": "Microsoft.Automation/automationAccounts/runbooks",
            "apiVersion": "2015-10-31",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
                "runbookType": "[parameters('runbooks')[copyIndex()].runboookType]",
                "description": "[parameters('runbooks')[copyIndex()].description]",
                "publishContentLink": {
                    "uri": "[parameters('runbooks')[copyIndex()].Uri]",
                    "version": "1.0.0.0"
                }
            },
            "copy": {
                "name": "deployRunbooks",
                "count": "[length(parameters('runbooks'))]"
            }
        },
        {
            "apiVersion": "2015-01-01",
            "name": "[concat('installRunNow-', copyIndex())]",
            "type": "Microsoft.Resources/deployments",
            "copy": {
                "name": "installRunnowbooks",
                "count": "[length(parameters('runnowbooks'))]"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('runbookTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "accountName": {
                        "value": "[parameters('accountName')]"
                    },
                    "runbookName": {
                        "value": "[parameters('runnowbooks')[copyIndex()].name]"
                    },
                    "runbookUri": {
                        "value": "[parameters('runnowbooks')[copyIndex()].uri]"
                    },
                    "runbookType": {
                        "value": "[parameters('runnowbooks')[copyIndex()].runboookType]"
                    },
                    "runbookDescription": {
                        "value": "[parameters('runnowbooks')[copyIndex()].description]"
                    }
                }
            }
        },
        {
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('installJob-', copyIndex())]",
            "copy": {
                "name": "installRunNowJobs",
                "count": "[length(parameters('runnowbooks'))]"
            },
            "dependsOn": [
                "installRunnowbooks"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('jobLink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "accountName": {
                        "value": "[parameters('accountName')]"
                    },
                    "runbook": {
                        "value": "[parameters('runnowbooks')[copyIndex()].name]"
                    },
                    "jobId": {
                        "value": "[guid(resourcegroup().id,copyIndex())]"
                    },
                    "runbook-parameters": {
                        "value": {
                            "TO": "test"
                        }
                    }
                }
            }
        }
    ],
    "outputs": {}
}