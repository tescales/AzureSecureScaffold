{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "accountname": {
      "type": "string",
      "metadata": {
        "description": "The name of the Automation account to use.  If this account exists, check the SKU and tags to make sure they match the exisitng account."
      }
    },
    "configurations": {
      "type": "array",
      "defaultvalue": []
    },
    "modules": {
      "type": "array",
      "defaultvalue": []
    }
  },
  "variables": {
    "pricingTier": "Free",
    "dscOverwrite": "true",
    "moduleTemplate": "https://raw.githubusercontent.com/azureautomation/automation-packs/master/000-base-automation-resource-templates/deploy-module/DeployModule.json",
    "configurationTemplate": "https://raw.githubusercontent.com/azureautomation/automation-packs/master/000-base-automation-resource-templates/deploy-configuration/deployConfiguration.json",
    "compilationjobTemplate": "https://raw.githubusercontent.com/azureautomation/automation-packs/master/000-base-automation-resource-templates/deploy-compilationjob/deployCompilationjob.json",
    "moduleCount": "[length(parameters('modules'))]",
    "configCount": "[length(parameters('configurations'))]"
    },
  "resources": [
    {
      "name": "[parameters('accountName')]",
      "type": "Microsoft.Automation/automationAccounts",
      "apiVersion": "2015-10-31",
      "location": "[resourcegroup().location]",
      "dependsOn": [],
      "tags": {},
      "properties": {
        "sku": {
          "name": "[variables('pricingTier')]"
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "[concat('installDSCModule-', copyIndex())]",
      "type": "Microsoft.Resources/deployments",
      "copy": {
        "name": "installModules",
        "count": "[variables('moduleCount')]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('moduleTemplate')]",
          "contentVersion": "1.0"
        },
        "parameters": {
          "accountName": {
            "value": "[parameters('accountName')]"
          },
          "moduleName": {
            "value": "[parameters('modules')[copyIndex()].name]"
          },
          "moduleUri": {
            "value": "[parameters('modules')[copyIndex()].Uri]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "[concat('installDSCConfig-', copyIndex())]",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'installDSCModule-', variables('moduleCount'))]"
      ],
      "copy": {
        "name": "installConfigs",
        "count": "[variables('configCount')]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('configurationTemplate')]",
          "contentVersion": "1.0"
        },
        "parameters": {
          "accountName": {
            "value": "[parameters('accountName')]"
          },
          "location": {
            "value": "[resourcegroup().location]"
          },
          "configurationName": {
            "value": "[parameters('configurations')[copyIndex()].name]"
          },
          "configurationDescription": {
            "value": "[parameters('configurations')[copyIndex()].description]"
          },
          "configurationURI": {
            "value": "[parameters('configurations')[copyIndex()].uri]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "[concat('installJob-', copyIndex())]",
      "type": "Microsoft.Resources/deployments",
      "copy": {
        "name": "deployJobs",
        "count": "[variables('configCount')]"
      },
      "dependson": [
        "installConfigs",
        "installModules"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('compilationjobTemplate')]",
          "contentVersion": "1.0"
        },
        "parameters": {
          "accountName": {
            "value": "[parameters('accountName')]"
          },
          "location": {
            "value": "[resourcegroup().location]"
          },
          "configurationName": {
            "value": "[parameters('configurations')[copyIndex()].name]"
          },
          "jobId": {
            "value": "[guid(resourceGroup().id, copyIndex())]"
          }
        }
      }
    }
  ],
  "outputs": {}
}