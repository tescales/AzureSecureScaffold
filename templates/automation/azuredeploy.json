{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "accountName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Azure Automation account to deploy to."
      }
    },
    "userName": {
      "type": "string",
      "metadata": {
        "description": "The username for the Azure Automation credential."
      }
    },
    "password": {
      "type": "securestring",
      "metadata": {
        "description": "The password for the Azure Automation credential."
      }
    },
    "subscriptionId": {
      "type": "string",
      "metadata": {
        "description": "Your Azure subscription ID."
      }
    }
  },
  "variables": {
    "pricingTier": "Free",
    "credentialName": "AzureCredential",
    "variableName": "AzureSubscriptionId",
    "variableType": "string",
    "jobLink": "https://raw.githubusercontent.com/tescales/azure-scaffold/master/templates/automation/jobs/azuredeploy.json",
    "scheduleTemplate": "https://raw.githubusercontent.com/azureautomation/automation-packs/master/000-base-automation-resource-templates/deploy-schedule/deployRunbookOnSchedule.json",
    "runbookTemplate": "https://raw.githubusercontent.com/tescales/azure-scaffold/master/templates/automation/runbooks/azuredeploy.json"
  },
  "resources": [
    {
      "name": "[parameters('accountName')]",
      "type": "Microsoft.Automation/automationAccounts",
      "apiVersion": "2015-10-31",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {},
      "properties": {
        "sku": {
          "name": "[variables('pricingTier')]"
        }
      },
      "resources": [
        {
          "name": "[variables('credentialName')]",
          "type": "credentials",
          "apiVersion": "2015-01-01-preview",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
          ],
          "tags": {},
          "properties": {
            "userName": "[parameters('userName')]",
            "password": "[parameters('password')]"
          }
        },
        {
          "name": "AutomationEndpoint",
          "type": "variables",
          "apiVersion": "2015-10-31",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
          ],
          "tags": {},
          "properties": {
            "description": "Automation endpoint",
            "Value": "[concat('\"', reference(resourceId(resourceGroup().name, 'Microsoft.Automation/automationAccounts/', parameters('accountName')), '2015-01-01-preview').registrationUrl,'\"')]"
          }
        },
        {
          "name": "AutomationCredential",
          "type": "credentials",
          "apiVersion": "2015-10-31",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
          ],
          "tags": {},
          "properties": {
            "userName": "AutomationKey",
            "password": "[listKeys(resourceId(resourceGroup().name, 'Microsoft.Automation/automationAccounts/', parameters('accountName')), '2015-01-01-preview').Keys[0].value]"
          }
        },
        {
          "name": "[variables('variableName')]",
          "type": "variables",
          "apiVersion": "2015-01-01-preview",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
          ],
          "tags": {},
          "properties": {
            "description": "Subscription ID for the Azure account to manage.",
            "isEncrypted": 0,
            "type": "[variables('variableType')]",
            "value": "[concat('\"',parameters('subscriptionId'),'\"')]"
          }
        }
      ]
    }
  ],
  "outputs": {}
}